{
  "name": "@symblight/wc-material",
  "private": false,
  "version": "0.0.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "wireit",
    "build-css": "node ./scripts/build-css.mjs",
    "build:vite": "tsc && vite build",
    "package": "npm run build",
    "prepublishOnly": "npm run package",
    "lint": "eslint --ext .ts . --ignore-path .gitignore",
    "format": "prettier --write . --ignore-path .gitignore",
    "preview": "vite preview",
    "sb": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/components/index.d.ts"
      }
    },
    "./theme/theme.css": "./dist/theme.css",
    "./theme/dark.css": "./dist/themes/dark.css",
    "./theme/light.css": "./dist/themes/light.css"
  },
  "dependencies": {
    "@lit-labs/observers": "^2.0.4",
    "@material-design-icons/svg": "^0.14.13",
    "@open-wc/form-control": "^1.0.0",
    "@open-wc/form-helpers": "^1.0.0",
    "lit": "^3.2.1",
    "rollup-plugin-postcss-lit": "^2.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.25.9",
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-links": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@storybook/web-components": "^8.4.2",
    "@storybook/web-components-vite": "^8.4.2",
    "esbuild": "^0.21.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.10",
    "storybook": "^8.4.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^3.9.1",
    "wireit": "^0.14.9"
  },
  "wireit": {
    "build-ts": {
      "command": "vite build",
      "files": [
        "components/**/*.ts",
        "components/**/*.css"
      ],
      "output": [
        "dist/**/*.js",
        "dist/**/*.ts",
        "dist/**/*.css",
        "dist/**/*.js.map"
      ],
      "clean": "if-file-deleted"
    },
    "build": {
      "command": "node ./scripts/build-css.mjs",
      "dependencies": [
        "build-ts"
      ],
      "files": [
        "**/*.css"
      ],
      "output": [
        "dist/theme.css"
      ],
      "clean": "if-file-deleted"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
